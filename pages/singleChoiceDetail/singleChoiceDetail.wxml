<view class="page">
  <view class="loading_box" wx:if="{{loading}}">
    <view class="loading3 loading3_1"></view>
    <view class="loading3 loading3_2"></view>
    <view class="loading3 loading3_3"></view>
  </view>
  <view class='top'>
    <view class='topLeft'>
      <text style='margin-left:20rpx;'>单项选择</text>
    </view>
    <view class='topRight'>
      <view class='topRightContent'>
        <text style='color:#1bd0bd;font-size:50rpx; font-style:italic;margin-right:10rpx;'>{{nowQuestionNumber+1}}</text>
        <text> / {{QuestionNum}}</text>
      </view>
    </view>
  </view>

  <view class='questionTitle'>
    {{nowQuestion.title}}
  </view>

  <view class='questionOption'>
    <view class='item'>
      <view class='correctCharacter character' wx:if="{{questionList[nowQuestionNumber].userChose=='A'&&questionList[nowQuestionNumber].answer[0]=='A'}}" bindtap='choseA'>A</view>
      <view class='errorCharacter character' wx:if="{{questionList[nowQuestionNumber].userChose!='A'&&questionList[nowQuestionNumber].answer[0]=='A'&&questionList[nowQuestionNumber].userChose!='空'}}" bindtap='choseA'>A</view>
      <view class='blankCharacter character' wx:if="{{questionList[nowQuestionNumber].answerResult==null||questionList[nowQuestionNumber].answerResult=='blank'||questionList[nowQuestionNumber].userChose!='A'}}" bindtap='choseA'>A</view>
      <view class='option'>{{nowQuestion.options[0]}}</view>
    </view>

    <view class='item'>
      <view class='correctCharacter character' wx:if="{{questionList[nowQuestionNumber].userChose=='B'&&questionList[nowQuestionNumber].answer[0]=='B'}}" bindtap='choseB'>B</view>
      <view class='errorCharacter character' wx:if="{{questionList[nowQuestionNumber].userChose!='B'&&questionList[nowQuestionNumber].answer[0]=='B'&&questionList[nowQuestionNumber].userChose!='空'}}" bindtap='choseA'>B</view>
      <view class='blankCharacter character' wx:if="{{questionList[nowQuestionNumber].answerResult==null||questionList[nowQuestionNumber].answerResult=='blank'||questionList[nowQuestionNumber].userChose!='B'}}" bindtap='choseB'>B</view>
      <view class='option'>{{nowQuestion.options[1]}}</view>
    </view>



    <view class='item'>
      <view class='correctCharacter character' wx:if="{{questionList[nowQuestionNumber].userChose=='C'&&questionList[nowQuestionNumber].answer[0]=='C'}}" bindtap='choseC'>C</view>
      <view class='errorCharacter character' wx:if="{{questionList[nowQuestionNumber].userChose!='C'&&questionList[nowQuestionNumber].answer[0]=='C'&&questionList[nowQuestionNumber].userChose!='空'}}" bindtap='choseA'>C</view>
      <view class='blankCharacter character' wx:if="{{questionList[nowQuestionNumber].answerResult==null||questionList[nowQuestionNumber].answerResult=='blank'||questionList[nowQuestionNumber].userChose!='C'}}" bindtap='choseC'>C</view>
      <view class='option'>{{nowQuestion.options[2]}}</view>
    </view>
    <view class='item'>
      <view class='correctCharacter character' wx:if="{{questionList[nowQuestionNumber].userChose=='D'&&questionList[nowQuestionNumber].answer[0]=='D'}}" bindtap='choseD'>D</view>
      <view class='errorCharacter character' wx:if="{{questionList[nowQuestionNumber].userChose!='D'&&questionList[nowQuestionNumber].answer[0]=='D'&&questionList[nowQuestionNumber].userChose!='空'}}" bindtap='choseA'>D</view>
      <view class='blankCharacter character' wx:if="{{questionList[nowQuestionNumber].answerResult==null||questionList[nowQuestionNumber].answerResult=='blank'||questionList[nowQuestionNumber].userChose!='D'}}" bindtap='choseD'>D</view>
      <view class='option'>{{nowQuestion.options[3]}}</view>
    </view>




  </view>

  <!-- <view class='frontQuestion' wx:if="{{nowQuestionNumber!=0}}"  bindtap='frontQuestion'>←</view> -->

  <!-- <view class='lastQuestion' wx:if="{{nowQuestionNumber!=24}}" bindtap='afterQuestion'>跳过此题</view> -->

  <!-- <view class='bottom'>
    <view class='left' bindtap='answerCard'>
      <image class='leftIcon' src='../../images/1-01.png'></image>
    </view>
    <view class='right'>
      <image class='rightIcon' src='../../images/1-02.png'></image>
    </view>
  </view> -->


  <view class='bottom'>
    <view class='bottomLeft'>
      <view class='frontQuestion' wx:if="{{nowQuestionNumber!=0}}" bindtap='frontQuestion'>上一题</view>
    </view>
    <view class='middle' bindtap='answerCard'>
      <image class='leftIcon' src='../../images/1-01.png'></image>
    </view>
    <view class='bottomRight'>
      <view class='lastQuestion' bindtap='afterQuestion'>下一题</view>
    </view>
  </view>



</view>